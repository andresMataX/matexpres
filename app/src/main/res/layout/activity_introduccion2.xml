<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Introduccion"
        android:orientation="vertical"
        android:padding="15dp">

    <TextView
            android:text="Suma de 1 y 2 cifras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textSize="20sp"
            android:textColor="@color/purple_3"
            android:textAlignment="center"
            android:textStyle="bold" />

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/intro"
            android:id="@+id/imageView7" />

    <TextView
            android:text="El símbolo de la suma es el símbolo más (+) y se intercala entre los elementos que se requiere sumar, como por ejemplo: 2 + 3 = 5.   Puedes guiarte con objetos para poder realizar la suma.  Ejemplo #1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ejemplo"
            android:id="@+id/imageView8" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Ver más"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/button13"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:onClick="teoria" />

        <Button
                android:text="Cerrar"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/button14"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:onClick="cerrar" />
    </LinearLayout>
</LinearLayout>