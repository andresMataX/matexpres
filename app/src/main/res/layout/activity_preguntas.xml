<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Preguntas">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo"
                    android:id="@+id/imageView14"
                    android:layout_weight="1" />

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                <TextView
                        android:text="Preguntas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        android:layout_weight="1"
                        android:textColor="@color/purple_3"
                        android:textSize="45sp"
                        android:gravity="bottom" />

                <TextView
                        android:text="Frecuentes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView19"
                        android:layout_weight="1"
                        android:textColor="@color/purple_3"
                        android:textSize="45sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp">

            <Button
                    android:text="¿Debo de pagar una suscripción para su uso? "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/purple_3"
                    android:background="@android:color/transparent"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:onClick="pregunta1" />

            <Button
                    android:text="¿Se guarda mi progreso automáticamente?  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/purple_3"
                    android:background="@android:color/transparent"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:onClick="pregunta2" />

            <Button
                    android:text="¿Si tengo problemas para realizar un ejercicio, que puedo hacer?  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button9"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/purple_3"
                    android:background="@android:color/transparent"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:onClick="pregunta3" />

            <Button
                    android:text="¿Por que solo puedo escoger 5 imágenes de perfil?  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button11"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/purple_3"
                    android:background="@android:color/transparent"
                    android:textAlignment="gravity"
                    android:gravity="left"
                    android:onClick="pregunta4" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>