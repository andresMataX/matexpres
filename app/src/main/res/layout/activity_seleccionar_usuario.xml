<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeleccionarUsuario"
        android:background="@drawable/fondo_gral">

    <Button
            android:text="@string/btnUsuario4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnUsuario4"
            app:layout_constraintStart_toEndOf="@+id/btnUsuario3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnUsuario2"
            android:drawableTop="@drawable/gato4"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            app:iconPadding="6dp"
            android:clickable="false"
            android:onClick="avanzar" />

    <Button
            android:text="@string/btnUsuario3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnUsuario3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnUsuario4"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnUsuario1"
            android:drawableTop="@drawable/gato3"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            app:iconPadding="6dp"
            android:clickable="false"
            android:onClick="avanzar" />

    <TextView
            android:text="@string/tvApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvApp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" />

    <TextView
            android:text="@string/tvIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvInstrucciones"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvApp"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.5" />

    <Button
            android:text="@string/btnUsuario2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnUsuario2"
            app:layout_constraintStart_toEndOf="@+id/btnUsuario1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInstrucciones"
            android:layout_marginTop="48dp"
            android:drawableTop="@drawable/gato6"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            app:iconPadding="6dp"
            android:onClick="avanzar" />

    <Button
            android:text="@string/btnUsuario1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnUsuario1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnUsuario2"
            app:layout_constraintTop_toBottomOf="@+id/tvInstrucciones"
            android:layout_marginTop="48dp"
            android:drawableTop="@drawable/gato1"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textAllCaps="false"
            app:iconPadding="6dp"
            android:onClick="avanzar" />

    <Button
            android:text="@string/btnPreguntas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnPreg"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/btnUsuario4"
            android:background="@android:color/transparent"
            android:textColor="@color/ic_launcher_background"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck"
            android:onClick="preguntas" />

</androidx.constraintlayout.widget.ConstraintLayout>