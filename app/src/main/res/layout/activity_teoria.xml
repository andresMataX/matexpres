<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Teoria">

    <TextView
            android:layout_width="122dp"
            android:layout_height="786dp"
            android:id="@+id/tvBarraLateral2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#F1CFF5" />

    <Button
            android:text="@string/btnMenu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenu_teoria"
            android:drawableTop="@drawable/home"
            android:background="@android:color/transparent"
            android:textSize="19sp"
            android:textColor="@color/purple_3"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            tools:ignore="TextContrastCheck"
            android:onClick="menu" />

    <Button
            android:text="@string/btnTeoria"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTeoria_teoria"
            android:drawableTop="@drawable/teoria_selec"
            android:background="@android:color/transparent"
            android:textSize="19sp"
            android:textColor="#FF9800"
            android:textAllCaps="false"
            tools:ignore="TextContrastCheck"
            app:layout_constraintTop_toBottomOf="@+id/btnMenu_teoria"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp" />

    <Button
            android:text="Ejercicio"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnEjercicio_teoria"
            android:drawableTop="@drawable/ejercicios"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:textColor="@color/purple_3"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btnTeoria_teoria"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="9dp"
            android:onClick="ejercicios" />

    <Button
            android:text="@string/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/btnSalir_teoria"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:onClick="salir" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="269dp"
            android:layout_height="783dp"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/tvBarraLateral2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp">

        <TextView
                android:text="Operación > Teoría"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="5sp" />

        <TextView
                android:text="Suma de 1 y 2 cifras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTema"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingTop="30sp" />

        <TextView
                android:text="Definición"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDefinicion"
                android:textColor="@color/ic_launcher_background"
                android:textSize="18sp" />

        <TextView
                android:text="La suma es una de las operaciones  básicas de la aritmética que consiste  en reunir dos o más cifras en una sola. Esta operación elemental suele realizar se con elementos que pertenecen a un mismo conjunto, es decir, que son simi lares o iguales entre sí."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvTeoria"
                android:padding="10sp"
                android:textSize="16sp"
                android:textColor="@color/black" />

        <TextView
                android:text="Link de apoyo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDefinicion2"
                android:textColor="@color/ic_launcher_background"
                android:textSize="18sp" />

        <TextView
                android:text="https://www.youtube.com/watch?v=lgTHXU0AS-w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvLinkApoyo"
                android:textColor="@color/black"
                android:gravity="right"
                android:paddingRight="25sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>